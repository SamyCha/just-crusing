<div class="panel panel-default">
  <div class="panel-heading">
    <i class="fa fa-plus-circle" aria-hidden="true"></i>
    Remplissez la fiche excursion
  </div>
  <div class="panel-body">
    <div class="container-fluid">
      <%= form_for @excursion, html: {multipart: true} do |f| %>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label> Nom de l'excursion</label>
            <%= f.text_field :name, placeholder: "Vallée des rois", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label>Pays</label>
            <%= f.text_field :country, placeholder: "Egypte..", class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label>Lieu</label>
            <%= f.text_field :address, placeholder: "Louxor", class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
      <div class="form-group">
        <div class="col-md-12">
          <label>Intérêt</label>
          <%= f.number_field :interest, placeholder: "1, 2, 3 , 4, 5", class: "form-control" %>
        </div>
      </div>
    </div>
    <br>
    <!--
    <div class="form-group">
      <div class="col-md-12">
        <label>Ajouter une photo</label>
        <%= f.file_field :photo %><br>
      </div>
    </div>
    -->
    <div class="actions">
      <%= f.submit "Créer l'excursion", class: 'btn btn-md btn-danger' %>
    </div>
    <% end %>
  </div>
</div>
</div>
